{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/room/create",
        "destination": "/room/create.html"
      },
      {
        "source": "/room/**/print",
        "destination": "/room/print.html"
      },
      {
        "source": "/room/**/manage",
        "destination": "/room/manage.html"
      },
      {
        "source": "/room/**",
        "destination": "/room/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": "5000"
    },
    "functions": {
      "port": "5001"
    },
    "firestore": {
      "port": "8080"
    },
    "ui": {
      "enabled": true,
      "port": "4000"
    },
    "auth": {
      "port": "9099"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
